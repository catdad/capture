{
  "manifest_version": 2,
  "name": "Capture",
  "description": "Capture screencasts and video using WebRTC",
  "version": "1.0.0.0",
  "version_name": "total preview 1",
  "author": "Kiril Vatev",
  "minimum_chrome_version": "42.0.0.0",
  "icons": {
    "128": "assets/128.png"
  },
  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  },
  "permissions": [
    { 
        "fileSystem": [
            "write"
        ]
    },
    "audioCapture",
    "desktopCapture",
    "videoCapture",
    "storage",
    "alwaysOnTopWindows",
    "app.window.alpha",
    "app.window.shape"
  ]
}
