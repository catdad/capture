{
  "manifest_version": 2,
  "name": "Capture",
  "description": "Capture screencasts and video using WebRTC",
  "version": "0.0.1",
  "author": "Kiril Vatev",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write"]},
    "audioCapture",
    "videoCapture",
    "desktopCapture"
  ]
}
