{
  "manifest_version": 2,
  "name": "Capture",
  "description": "Capture screencasts and video using WebRTC",
  "version": "0.0.1",
  "author": "Kiril Vatev",
  "minimum_chrome_version": "35",
  "icons": {
    "128": "assets/128.png"
  },
  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  },
  "permissions": [
    { 
        "fileSystem": [
            "write"
        ]
    },
    "audioCapture",
    "desktopCapture",
    "videoCapture",
    "alwaysOnTopWindows",
    "app.window.alpha",
    "app.window.shape"
  ]
}
